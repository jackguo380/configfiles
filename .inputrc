set editing-mode vi

set keymap vi-command
"gg": beginning-of-history
"G": end-of-history

set keymap vi-insert
"jj": vi-movement-mode

# Show a different prompt depending on the mode
set show-mode-in-prompt on
# [N] for normal mode
set vi-cmd-mode-string "\1\e[1;90m\2[\1\e[93m\2N\1\e[1;90m\2]\1\e[0m\2"
# [I] for insert mode
set vi-ins-mode-string "\1\e[1;90m\2[\1\e[96m\2I\1\e[1;90m\2]\1\e[0m\2"
